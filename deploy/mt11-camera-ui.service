[Unit]
Description=MT11 Camera Control UI (FastAPI)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/github/siyi-mt11-cameracontrol
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/pi/github/siyi-mt11-cameracontrol/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
